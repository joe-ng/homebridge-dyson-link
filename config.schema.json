{
  "pluginAlias": "homebridge-dyson-link",
  "pluginType": "platform",
  "singular": false,
  "headerDisplay": "Optional content to display above the plugin config. Supports markdown.",
  "footerDisplay": "Optional content to display below the plugin config. Supports markdown.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "required": true
      },
      "email":{
          "type": "string",
          "default": "dysonuser@dyson.com",
          "required": false,
            "description": "For newer models, (like TP04/DP04), authentication is enabled by using a Dyson account registered with the device."
      },
      "password":{
          "type": "string",
          "default": "password",
          "required": false,
            "description": "For newer models, (like TP04/DP04), authentication is enabled by using a Dyson account registered with the device."
      },
      "country":{
          "type": "string",
          "default": "US",
          "required": false
      },
      "platform":{
          "type": "string",
          "default": "DysonPlatform",
          "required": true
      },
      "accessories": {
        "type": "array",
        "items": {
        "type": "object",
        "properties": {
          "ip": {
            "title": "IP Address",
            "type": "string",
            "default": "192.168.1.1",
            "required": true,
            "format": "hostname",
            "description": "IP Address of Dyson Product"
          },
          "displayName": {
            "title": "Display Name",
            "type": "string",
            "default": "Dyson",
            "minimum": 1,
            "description": "Name to be shown on Home App"
          },
          "serialNumber": {
            "title": "Serial Number",
            "type": "string",
            "default": "DYSON-XXX-XX-XXXXXXXX-XXX",
            "description": "Serial Number off of Dyson Product"
          },
          "password": {
            "title": "Password",
            "type": "string",
            "default": "password of your device",
            "minimum": 1,
            "description": "SSID Password or "
          }
        }
      }
     }
    }
  }
}
